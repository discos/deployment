#==========================================
# logfiles rotation in /archive/events/acs.xml
#

/archive/events/acs.xml {
    rotate 365
    daily
    copytruncate
    dateext
    dateformat .%Y%m%d
    extension .xml
    missingok
    compress
    postrotate
        rsync /archive/events/*.gz /service/events/
    endscript
}

#==========================================
